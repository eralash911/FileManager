<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <MenuBar>
          <Menu text="File">
            <MenuItem text="Exit" onAction="#btnExit" />
          </Menu>
      </MenuBar>
   </children>

    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="main.fxml" HBox.hgrow="ALWAYS"/>
        <fx:include fx:id="rightPanel" source="main.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>

  <HBox spacing="5">
    <Button maxWidth="-Infinity" focusTraversable="false" text="Copy" HBox.hgrow="ALWAYS" onAction="#btnCopy" />
    <Button maxWidth="-Infinity" focusTraversable="false" text="Move" HBox.hgrow="ALWAYS" />
    <Button maxWidth="-Infinity" focusTraversable="false" text="Delete" HBox.hgrow="ALWAYS" />
    <Button maxWidth="-Infinity" text="Exit" HBox.hgrow="ALWAYS" onAction="#btnExit" />
      <padding>
         <Insets top="5.0" bottom="5" left="5" right="5" />
      </padding>

  </HBox>
</VBox>
